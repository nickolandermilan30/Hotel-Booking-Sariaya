<layer-list xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="MissingDefaultResource">

    <!-- Background Shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/sky_blue" /> <!-- Change color here -->
            <corners
                android:bottomRightRadius="1000dp"
                android:bottomLeftRadius="1000dp"
                android:topRightRadius="1000dp"
                android:topLeftRadius="1000dp" />
            <stroke
                android:width="2dp"
                android:color="@color/sky_blue"
                />

            <!-- Change stroke color here -->
        </shape>
    </item>

    <!-- Image with Color Filter -->
    <item
        android:drawable="@drawable/check"
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp"/>


</layer-list>
